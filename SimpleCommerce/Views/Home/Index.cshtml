<!-- SHOP PRODUCTS -->
<section>
    <div class="container">

        <div class="heading m-b-40">
            <h4>Öne Çıkan Ürünler</h4>
        </div>

        <!--Product list-->
        <div class="shop">
            <div class="row">
                @foreach (var item in ViewBag.FeaturedProducts)
                {


                    <div class="col-md-3">
                        <div class="product">
                            <div class="product-image">
                                <a href="@Url.Action("Details","Products",new { id = item.Id })">
                                    <img alt="@item.Name" src="~/Uploads/@item.Photo" style="height:120px;",width="100px;">
                                </a>
                               
                                <span class="product-new">NEW</span>
                                <span class="product-wishlist">
                                    <a href="#"><i class="fa fa-heart"></i></a>
                                </span>
                                <div class="product-overlay">
                                    <a href="@Url.Action("Details","Products",new { id = item.Id })" data-lightbox-type="ajax">Hızlı Görünüm</a>
                                </div>
                            </div>

                            <div class="product-description">
                                <div class="product-category">@item.Category.Name</div>
                                <div class="product-title">
                                    <h3><a href="#"></a>@item.Name</h3>
                                </div>
                                <div class="product-price">
                                    <ins>₺@item.Price</ins>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                 }
            </div>
        </div>
    </div>
</section>
<!-- END: SHOP PRODUCTS -->
